<!DOCTYPE html>
<html>
  <head>
    <title>DrinksMB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
  </head>

  <body>
  <nav class="navbar" role="navigation" aria-label="main navigation">

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item">
        <%= link_to 'Drinks', root_path%>
      </a>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          Country
        </a>

        <div class="navbar-dropdown">
        <% CountryOfOrigin.all.each do |country|%>
          <a class="navbar-item">
            <%= link_to country.name, country%>
          </a>
          <% end%>
          <hr class="navbar-divider">
        </div>
      </div>
      <a class="navbar-item">
        <%= link_to 'About Us', permalink_path('About_Us')%>
      </a>
      <a class="navbar-item">
        <%= link_to 'Contact Us', permalink_path('Contact')%>
      </a>
    </div>
    <div class="navbar-end">

    </div>
  </div>
</nav>
    <section class="section">
    <div class="container">
    <header>
    <div class='title'>Drinks MB</div>
     </header>

    <%= yield %>

    </div>
  </section>
  </body>
</html>
