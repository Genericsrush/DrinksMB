<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
          <%= link_to drink.name, drink %>
      </p>
        <%if drink.image.present?%>
        <div class="card-image">
          <figure class="image">
            <a><%= image_tag drink.image, alt: drink.name %></a>
          </figure>
        </div>
        <%end%>
      <p>Description: <%= drink.description %></p>
      <%if drink.discount != 0%>
      <p>On Sale!</p>
      <%end%>
      <p>Price: <%= number_to_currency drink.price_cents/100.0 %></p>
      <p>New: <%= drink.new? %> </p>
      <% if @cart.include?(drink)%>
      <p>Item added!</p>
      <% else %>
      <%= button_to 'Add to cart', add_to_cart_path(drink.id), method: :post %>
      <% end %>
    </div>
  </div>
  </div>