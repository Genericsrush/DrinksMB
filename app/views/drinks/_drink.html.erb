<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
          <%= link_to drink.name, drink %>
      </p>
        <%if drink.image.present?%>
        <div class="card-image">
          <figure class="image">
            <%= image_tag drink.image%>
          </figure>
        </div>
        <%end%>
      <p>Description: <%= drink.description %></p>
      <p>Price: <%= number_to_currency drink.price_cents/100.0 %></p>
      <p>New: <%= drink.new? %> </p>
      <p><%= button_to 'Add to cart', add_to_cart_path(drink.id), method: :post %></p>
    </div>
  </div>
  </div>